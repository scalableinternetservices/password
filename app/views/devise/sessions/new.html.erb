<html>
  <head>
  <style>
    html { background-color: #4469B0; }
    .text_input {
      width: 80%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      border-radius: 4px;
      box-sizing: border-box;
    }
    h1 {
      font-family: 'Montserrat';
    }
    .label {
      font-size: 14px;
      font-family: 'Montserrat';
    }
    .container {
      text-align: center;
    }
    .content {
      display: inline-block;
      width: 50%;
    }
    .card {
        display: inline-block;
        width: 30%;
        border-style: solid;
        border-radius: 5px;
        border-width: 1px;
        border-color: #DCDCDC;
        margin-bottom: 10px;
        background-color: white;
    }
    .header {
      margin-top: 0px;
      background-color: #E9EBEE;
    }
    .button-login {
      background-color: #4469B0; /* Green */
      font-family: 'Montserrat';
      border: none;
      margin-top: 5%;
      color: white;
      padding: 15px 32px;
      margin-bottom: 10px;
      text-align: center;
      text-decoration: none;
      width: 60%;
      display: inline-block;
      font-size: 16px;
    }
  </style>
  </head>
  <body> 
  <div class="container">
    <div class="card">
    <div class="header">
      <img src="/assets/nosedive.png" height="200px" width="250px" />
      <h1>Nosedive</h1>
    </div>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'text_input' %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Password', class: 'text_input' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: 'label' %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class: 'button-login' %>
        <%= link_to "Forgot your password?", new_password_path(resource_name), class: 'button-login'  %><br />
          <%= link_to "Sign up", new_registration_path(resource_name), class: 'button-login' %><br />
      </div>

    <% end %>
    </div>
    </div>
   </body>
</html>